{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "jsx": "preserve",
    "types": [
      // "vitest/globals", // .test.ts の中で直接itやexceptを使う時はコメントを解除する
      "vitest/importMeta" // In-Source テストを行う時はコメントを解除する
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".ssg-output/test/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
